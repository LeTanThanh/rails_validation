<%= form_for user, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :gender, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :gender, class: "form-control" %>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :subdomain, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :subdomain, class: "form-control" %>
    </div>
  </div>

  <% if @user.new_record? %>
    <div class="form-group">
      <%= f.label :password, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <label class="control-label col-sm-2">
      Terms of service
    </label>
    <div class="col-sm-10">
      <textarea class="form-control" rows="4" readonly="true">
Sample Terms of service
Line 1 ...
Line 2 ...
      </textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label>
            <%= f.check_box :terms_of_service %>  Agree with Terms of service
          </label>
        </div>
      </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-warning" %>
    </div>
  </div>
<% end %>
